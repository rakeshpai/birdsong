{
  "extends": "rakeshpai",
  "ignorePatterns": [
    "coverage",
    "dist",
    "node_modules"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.ts",
          "**/*.spec.ts"
        ]
      }
    ]
  }
}