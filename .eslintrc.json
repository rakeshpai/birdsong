{
  "extends": "rakeshpai",
  "ignorePatterns": [
    "coverage",
    "dist",
    "node_modules"
  ],
  "parserOptions": {
    "project": [
      "./packages/http/tsconfig.eslint.json",
      "./common/tsconfig.json"
    ]
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.ts",
          "**/*.spec.ts"
        ]
      }
    ]
  }
}