{
  "include": [
    "./common"
  ],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "types": []
  },
  "lib": [
    "esnext"
  ],
  "references": [
    {
      "path": "./packages/http/tsconfig.json"
    },
    {
      "path": "./common/tsconfig.json"
    }
  ]
}