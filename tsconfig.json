{
  "include": [
    "./src"
  ],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "types": []
  },
  "lib": [
    "esnext"
  ],
}